@model AgenciadeTours.Models.Destino

@{
    ViewData["Title"] = "Nuevo Destino";
}

<h2>Nuevo Destino</h2>

<form asp-action="Crear" method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PaisID">País</label>
        <select asp-for="PaisID" asp-items="ViewBag.PaisID" class="form-control"></select>
        <span asp-validation-for="PaisID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Dias_Duracion"></label>
        <input asp-for="Dias_Duracion" class="form-control" />
        <span asp-validation-for="Dias_Duracion" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Horas_Duracion"></label>
        <input asp-for="Horas_Duracion" class="form-control" />
        <span asp-validation-for="Horas_Duracion" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Guardar</button>
    <a asp-action="Lista" class="btn btn-secondary">Ver Lista</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}