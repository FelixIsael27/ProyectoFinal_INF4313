@model AgenciadeTours.Models.Tour

@{
    ViewData["Title"] = "Nuevo Tour";
}

<h1>Nuevo Tour</h1>

<form asp-action="Crear" method="post">
    @Html.AntiForgeryToken()

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="Nombre" class="form-label"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="PaisID" class="form-label"></label>
        <select asp-for="PaisID" asp-items="ViewBag.PaisID" class="form-select"></select>
        <span asp-validation-for="PaisID" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="DestinoID" class="form-label"></label>
        <select asp-for="DestinoID" asp-items="ViewBag.DestinoID" class="form-select"></select>
        <span asp-validation-for="DestinoID" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Fecha" class="form-label"></label>
        <input asp-for="Fecha" class="form-control" type="date" />
        <span asp-validation-for="Fecha" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Hora" class="form-label"></label>
        <input asp-for="Hora" class="form-control" type="time" />
        <span asp-validation-for="Hora" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Precio" class="form-label"></label>
        <input asp-for="Precio" class="form-control" />
        <span asp-validation-for="Precio" class="text-danger"></span>
    </div>

    <hr />

    <h4>Datos Calculados</h4>

    @if (Model != null)
    {
        <div class="mb-3">
            <label>Duración (Días / Horas)</label>
            <input class="form-control" value="@Model.Duracion_Dias días / @Model.Duracion_Horas horas" disabled />
        </div>

        <div class="mb-3">
            <label>Fecha y hora fin</label>
            <input class="form-control" value="@Model.FechaHoraFin" disabled />
        </div>

        <div class="mb-3">
            <label>ITBIS</label>
            <input class="form-control" value="@Model.ITBIS" disabled />
        </div>

        <div class="mb-3">
            <label>Estado</label>
            <input class="form-control" value="@Model.Estado" disabled />
        </div>
    }
    else
    {
        <div class="mb-3">
            <label>Duración (Días / Horas)</label>
            <input class="form-control" value="—" disabled />
        </div>
    }

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Lista" class="btn btn-secondary">Ver lista</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}